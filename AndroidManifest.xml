<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.freechat" >
    <uses-sdk 
        android:minSdkVersion="15"
        android:targetSdkVersion="20" />
	
        <!-- Internet Access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.freechat.ui.FCLoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
   			android:name = "com.example.freechat.ui.FCRegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
   			android:name = "com.example.freechat.ui.FCChatActivity"
            android:label="@string/title_activity_chat" >          
        </activity>
        <activity
   			android:name = "com.example.freechat.ui.FCActionBarActivity"
            android:label="@string/title_activity_fcaction_bar" >
        </activity>
        
        <activity
            android:name= "com.example.freechat.ui.FCMainActivity"
            android:label="@string/title_activity_fcmain"  >
        </activity>
        
    </application>

</manifest>
